{
  "name": "epic-remark",
  "version": "0.1.0",
  "description": "Epic Remark is an all-in-one markdown to HTML processor built on top of remark",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack",
    "prep": "yarn prettier . --write && yarn build",
    "example": "cd example && node example.js",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "keywords": [
    "remark",
    "remark-plugin"
  ],
  "author": "sandypockets",
  "license": "MIT",
  "dependencies": {
    "rehype-stringify": "^10.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "remark-rehype": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "jest": "^29.7.0",
    "prettier": "3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
